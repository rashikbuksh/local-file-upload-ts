{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		"typeRoots": ["./node_modules/@types"],
		"types": ["node"],
		"strict": true,
		"declaration": true,
		"outDir": "./dist",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
